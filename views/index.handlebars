{{!-- display saved events --}}
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h2 class="sub-title-text">Saved Points of Interest</h2>
        <div class="row saved-pois">
            {{#each activities}}
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                <div class="row">
                    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
                        <!-- Photo -->
                        <div class="row">
                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                <a href="{{this.url}}"><img src="{{this.photo}}" alt="poi_image"></a>
                            </div>
                            <!-- Text -->
                            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                                <h3 class="poi-name">{{this.name}}</h3>
                                <p class="poi-desc">{{this.description}}</p>
                                <br>
                                <a href="{{this.directions}}">Get Directions</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                        <button class="btn btn-warning my-2 my-sm-0 nav-btn deleteActivity save-btn" data-id="{{this.id}}" type="button">DELETE</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <h2 class="sub-title-text">Saved Restaurants</h2>
        <div class="row saved-rest">
            {{#each restaurants}}
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="row">
                    <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
                        <!-- Photo -->
                        <div class="row">
                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                <img src="{{this.photo}}" alt="restaurant_image">
                            </div>
                            <!-- Text -->
                            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                                <h3 class="rest-name">{{this.name}}</h3>
                                <p class="rest-address">{{this.address}}</p>
                                <p class="rest-rating">Rating: {{this.rating}}/5</p>
                                <br>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                        <button class="btn btn-warning my-2 my-sm-0 nav-btn deleteRestaurant save-btn" data-id="{{this.id}}" type="button">DELETE</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>